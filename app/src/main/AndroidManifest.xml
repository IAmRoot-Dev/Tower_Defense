        </activity>
        <activity android:name=".PlayMenu" android:screenOrientation="landscape">
        </activity>
        <activity android:name=".SettingsMenu" android:screenOrientation="landscape">
        </activity>
        <activity android:name=".StoreMenu" android:screenOrientation="landscape">
        </activity>
        <activity android:name=".CampaignMenu" android:screenOrientation="landscape">
        </activity>
        <activity android:name=".ChallengesMenu" android:screenOrientation="landscape">
        </activity>
        <activity android:name=".GuideMain" android:screenOrientation="landscape">
        </activity>
        <activity android:name=".AboutMain" android:screenOrientation="landscape">
        </activity>
        <activity android:name=".TermsMain" android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>